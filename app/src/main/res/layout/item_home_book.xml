<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="horizontal"
    android:id="@+id/lin"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_124"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《K线图的93个卖出形态》"
            android:textColor="@color/C_333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="作者：哈利路亚"
            android:textColor="@color/C_DC818A"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="《行动和勇气》记录和阐释了大萧条以来最糟糕的金融危机和经济衰退，并以内部人士的视角回顾…"
            android:textColor="@color/C_999999"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_home_more"
                android:drawablePadding="@dimen/dp_8"
                android:text="开始阅读"
                android:textColor="@color/C_999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>