<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rightMsg_lastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/chat_room_time"
        android:padding="3dp"
        android:text="20:23"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/rightMsg_userHead"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_below="@+id/rightMsg_lastTime"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/rightMsg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rightMsg_userHead"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/rightMsg_userHead"
        android:padding="10dp"
        android:text="This is a message. And how do you think of this Message look like."
        android:textColor="@color/textWhite" />

</RelativeLayout>
