<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".activity.PerfectingInformationActivity">

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_vertical"
                android:text="标题"
                android:textColor="#666666"
                android:textSize="@dimen/dp_16" />

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5px"-->
            <!--android:background="#22000000" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_16"
                android:background="#22000000" />

            <EditText
                android:id="@+id/photo_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_39"
                android:background="@null"
                android:hint="输入相册标题"
                android:textColor="#666666"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_70"
                android:gravity="center_vertical"
                android:text="共享"
                android:textColor="#666666"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/photo_description"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_70"
                android:hint="共享到亲戚相册"
                android:textColor="#666666"
                android:textSize="15dp" />

            <Switch
                android:id="@+id/switch_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_marginRight="@dimen/dp_30" />

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:layout_marginTop="250dp"-->
            <!--android:background="#22000000" />-->

            <TextView
                android:id="@+id/tv_create"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_257"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/bg__rectangle_read"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>