<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.PerfectingInformationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/huise">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="添加相册"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/back" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_23"
                    android:text="标题"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_13"
                    android:textColor="#666666"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#22000000" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_50"
                    android:background="#22000000" />
                <EditText
                    android:id="@+id/photo_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginRight="@dimen/dp_39"
                    android:layout_marginLeft="@dimen/dp_106"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@null"
                    android:hint="输入相册标题"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp_16"
                    />
                <TextView
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_23"
                    android:text="共享"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_70"
                    android:textColor="#666666"/>

                <TextView
                    android:layout_height="@dimen/dp_23"
                    android:id="@+id/photo_description"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_106"
                    android:layout_marginTop="@dimen/dp_70"
                    android:hint="共享到亲戚相册"
                    android:textColor="#666666"
                    android:textSize="15dp"/>
                <Switch
                    android:id="@+id/shareswitch"
                    android:layout_height="@dimen/dp_64"
                    android:layout_width="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_39"
                    android:layout_marginTop="@dimen/dp_56"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="250dp"
                    android:background="#22000000" />
                <TextView
                    android:layout_height="@dimen/dp_47"
                    android:id="@+id/savePhotos"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_257"
                    android:text="完成创建"
                    android:background="@drawable/bg__rectangle_read"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dp_18"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>