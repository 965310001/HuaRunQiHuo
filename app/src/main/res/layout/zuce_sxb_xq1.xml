<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_rectangle_black"
    android:minHeight="@dimen/dp_140"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:gravity="center"
            android:text="世系"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#333333" />

        <TextView
            android:id="@+id/tv_generation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_63"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_14"
            tools:text="一\n世" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#333333" />

        <TextView
            android:id="@+id/tv_family"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:gravity="center"
            android:text="兄妹  人"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@id/tv_ranking"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:gravity="center"
            android:text="排行  "
            android:textColor="@color/black"
            android:textSize="@dimen/dp_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#333333" />

        <TextView
            android:id="@+id/tv_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="本人简介  "
            android:textColor="@color/black"
            android:textSize="@dimen/dp_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@drawable/bg_rectangle_black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_black">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/bg_rectangle_black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/dp_17"
                    android:gravity="center"
                    android:text="本人"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:background="@drawable/bg_rectangle_black"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_10"
                        tools:text="戴" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#333333" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/sp_15"
                            android:gravity="center"
                            android:text="生"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="#333333" />

                        <TextView
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/sp_15"
                            android:gravity="center"
                            android:text="卒"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rectangle_black_vertical_line"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sp_15"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10"
                            tools:text="生" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="#333333" />

                        <TextView
                            android:id="@+id/tv_deathTime"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sp_15"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10"
                            tools:text="卒" />
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_icon"
                    tools:src="@mipmap/wode"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_64"
                    android:gravity="center"
                    android:text="照片" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_17"
                    android:gravity="center"

                    android:text="配偶"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_32"
                    android:background="@drawable/bg_rectangle_black">

                    <TextView
                        android:id="@+id/tv_spouses_name"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_10"
                        tools:text="朱" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#333333" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/sp_15"
                            android:gravity="center"
                            android:text="生"
                            android:textColor="@color/black"

                            android:textSize="@dimen/dp_10" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="#333333" />

                        <TextView
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/sp_15"
                            android:gravity="center"
                            android:text="卒"
                            android:textColor="@color/black"

                            android:textSize="@dimen/dp_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rectangle_black_vertical_line"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_spouses_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10"
                            tools:text="生" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="#333333" />

                        <TextView
                            android:id="@+id/tv_spouses_deathTime"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sp_15"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10"
                            tools:text="卒" />
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_spouses_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_64"
                    tools:src="@mipmap/wode"
                    android:layout_margin="@dimen/dp_4"
                    android:gravity="center"
                    android:text="照片" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle_black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16"
                    android:gravity="center"
                    android:text="父母"
                    android:textColor="@color/black"

                    android:textSize="@dimen/dp_10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#333333" />

                <TextView
                    android:id="@+id/tv_father_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_10"
                    tools:text="父母" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:text="孩子"

                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_10" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#333333" />

                <TextView
                    android:id="@+id/tv_children_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_10"
                    tools:text="孩子" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="排行"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_10" />
    </LinearLayout>

</LinearLayout>
