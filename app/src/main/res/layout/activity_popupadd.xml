<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_fuqin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_woziji"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/fuqin" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_31"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="父亲"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_muqin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_woziji"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/muqin" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_31"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="母亲"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_25"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_jiedi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/fuqin" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_31"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="兄弟姐妹"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_woziji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/fuqin" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_31"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="我自己"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_peiou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_toRightOf="@id/ll_woziji"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/muqin" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_31"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="配偶"
                android:textColor="#666666" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_erzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_woziji"
            android:layout_marginRight="@dimen/dp_25"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/fuqin" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_31"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="儿子"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_nver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_woziji"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/muqin" />

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_31"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="女儿"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>