<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_39"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_59"
        android:paddingRight="@dimen/dp_53">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_phone" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:background="@null"
            android:hint="手机号码"
            android:inputType="number"
            android:textColor="@color/C_333333"
            android:textColorHint="@color/C_C6C6C6"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_53"
        android:background="@color/C_DDDDDD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_59"
        android:paddingRight="@dimen/dp_53">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pass" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:background="@null"
            android:hint="新密码"
            android:inputType="textPassword"
            android:textColor="@color/C_333333"
            android:textColorHint="@color/C_C6C6C6"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_53"
        android:background="@color/C_DDDDDD"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_59"
        android:paddingRight="@dimen/dp_53">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_phone" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:textColor="@color/C_333333"
            android:textColorHint="@color/C_C6C6C6"
            android:textSize="@dimen/sp_16" />

        <tech.com.commoncore.widget.CountDownTextView
            android:id="@+id/tv_verify_code"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/C_E48B81"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_53"
        android:background="@color/C_DDDDDD"/>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_53"
        android:background="@drawable/bg_sign_in"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15" />
</LinearLayout>