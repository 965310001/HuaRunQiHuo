<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/layout_title_bar"></include>


    <ImageView
        android:layout_width="@dimen/dp_79"
        android:layout_height="@dimen/dp_79"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_66"
        android:src="@mipmap/logo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_59"
        android:paddingRight="@dimen/dp_53">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_phone" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:background="@null"
            android:hint="手机号码"
            android:inputType="number"
            android:textColor="@color/C_333333"
            android:textColorHint="@color/C_C6C6C6"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_53"
        android:background="@color/C_DDDDDD"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_59"
        android:paddingRight="@dimen/dp_53">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pass" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:background="@null"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:textColor="@color/C_333333"
            android:textColorHint="@color/C_C6C6C6"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_53"
        android:background="@color/C_DDDDDD"></View>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_53"
        android:background="@drawable/bg_sign_in"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_23"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forget_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/C_DC818A"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/C_DC818A"></View>

        <TextView
            android:id="@+id/tv_to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textColor="@color/C_DC818A"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>