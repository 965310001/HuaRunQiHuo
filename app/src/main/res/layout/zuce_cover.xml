<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fengmian">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_345"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_marginRight="45dp"
        android:background="@drawable/bg_content_color_round_5"
        android:ems="1"
        android:gravity="center"
        android:text="戴氏族谱"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_67"
        android:layout_marginTop="@dimen/dp_210"
        android:orientation="vertical">

        <TextView
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/bg_content_color_round_5"
            android:ems="1"
            android:gravity="center"
            android:text="主编"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_189"
            android:background="@drawable/bg_content_color_round_5"
            android:ems="1"
            android:gravity="center"
            android:text="未填写"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_210"
        android:orientation="vertical">

        <TextView
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/bg_content_color_round_5"
            android:ems="1"
            android:gravity="center"
            android:text="日期"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_189"
            android:background="@drawable/bg_content_color_round_5"
            android:ems="1"
            android:gravity="center"
            android:text="未填写"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
